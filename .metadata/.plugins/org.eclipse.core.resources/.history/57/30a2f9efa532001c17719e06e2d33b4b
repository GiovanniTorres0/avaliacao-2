package Caixa;

import java.util.Scanner;

public class Menu {

	public int menu(Scanner scanner) {
		int opcao;
		System.out.println("\nESCOLHA UMA OPÇÃO:");
		System.out.println("1- Cadastre 3 ofertas\n2- Atualizar primeira oferta cadastrada\n3- Excluir segunda oferta cadastrada\n4- Selecionar um Range de Produtos\n0- Sair");
		opcao = scanner.nextInt();
		return opcao;
	}
}